---
interface Props {
  lang: string;
  i18n: {
    work: {
      title: string;
      subtitle: string;
      description: string;
      cta: {
        viewServices: string;
        consultation: string;
      };
    };
  };
}

const { lang, i18n } = Astro.props;
---

<section
  class="bg-base-200 dark:bg-base-300 py-16 transition-colors duration-300"
>
  <div class="container mx-auto px-4">
    <div
      class="card bg-primary text-primary-foreground shadow-xl transition-colors duration-300"
    >
      <div class="card-body py-12 text-center">
        <h2 class="card-title mb-3 justify-center text-3xl font-bold">
          {i18n.work.title}
        </h2>
        <p class="mx-auto mb-8 max-w-2xl text-xl opacity-90">
          {i18n.work.description}
        </p>
        <div class="card-actions justify-center gap-4">
          <a
            href={`/${lang === "en" ? "" : "id/"}services`}
            class="btn btn-primary text-primary hover:text-primary/90 btn-lg bg-white transition-all duration-300 hover:bg-white/90"
          >
            {i18n.work.cta.viewServices}
          </a>
          <a
            href={`/${lang === "en" ? "" : "id/"}contact?type=consultation`}
            class="btn btn-outline btn-lg border-white text-white transition-all duration-300 hover:border-white hover:bg-white/20 hover:text-white"
          >
            {i18n.work.cta.consultation}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
