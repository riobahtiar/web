---
interface Props {
    lang: string;
    i18n: {
        work: {
            title: string;
            subtitle: string;
            description: string;
            cta: {
                viewServices: string;
                consultation: string;
            };
        };
    };
}

const { lang, i18n } = Astro.props;
---

<section class="bg-base-200 dark:bg-base-300 py-16 transition-colors duration-300">
    <div class="container mx-auto px-4">
        <div class="card bg-primary text-primary-foreground shadow-xl transition-colors duration-300">
            <div class="card-body text-center py-12">
                <h2 class="card-title text-3xl font-bold justify-center mb-3">{i18n.work.title}</h2>
                <p class="text-xl opacity-90 max-w-2xl mx-auto mb-8">{i18n.work.description}</p>
                <div class="card-actions justify-center gap-4">
                    <a href={`/${lang === 'en' ? '' : 'id/'}services`} class="btn btn-primary bg-white hover:bg-white/90 text-primary hover:text-primary/90 btn-lg transition-all duration-300">
                        {i18n.work.cta.viewServices}
                    </a>
                    <a 
                        href={`/${lang === 'en' ? '' : 'id/'}contact?type=consultation`} 
                        class="btn btn-outline border-white text-white hover:bg-white/20 hover:border-white hover:text-white btn-lg transition-all duration-300"
                    >
                        {i18n.work.cta.consultation}
                    </a>
                </div>
            </div>
        </div>
    </div>
</section> 