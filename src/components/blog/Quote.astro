---
import { Icon } from "astro-icon/components";

interface Props {
  author?: string;
  role?: string;
  avatar?: string;
  variant?: "default" | "bordered" | "minimal";
}

const { author, role, avatar, variant = "default" } = Astro.props;

const variantStyles = {
  default: "bg-base-200 border-l-4 border-primary",
  bordered: "bg-base-100 border-2 border-primary",
  minimal: "bg-transparent border-l-4 border-primary",
};
---

<blockquote class={`quote-block my-8 rounded-lg p-6 ${variantStyles[variant]}`}>
  <div class="flex items-start gap-4">
    <Icon
      name="tabler:quote"
      class="h-8 w-8 text-primary flex-shrink-0 mt-1"
    />

    <div class="flex-1">
      <div class="prose prose-lg max-w-none text-base-content/90 mb-4">
        <slot />
      </div>

      {(author || role || avatar) && (
        <div class="flex items-center gap-3 mt-4 pt-4 border-t border-base-300">
          {avatar && (
            <div class="avatar">
              <div class="w-10 h-10 rounded-full">
                <img src={avatar} alt={author || "Quote author"} />
              </div>
            </div>
          )}

          <div>
            {author && (
              <p class="font-semibold text-base-content text-sm mb-0">
                {author}
              </p>
            )}
            {role && (
              <p class="text-base-content/60 text-xs mb-0">
                {role}
              </p>
            )}
          </div>
        </div>
      )}
    </div>
  </div>
</blockquote>

<style>
  .quote-block :global(p:first-child) {
    margin-top: 0;
  }

  .quote-block :global(p:last-child) {
    margin-bottom: 0;
  }

  .quote-block :global(em) {
    @apply not-italic;
  }
</style>
