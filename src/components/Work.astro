---
import { Icon } from 'astro-icon/components';

interface Props {
    lang: string;
    i18n: any;
}

const { lang, i18n } = Astro.props;
---

<section class="py-16 px-4 sm:px-6 lg:px-8 mx-auto max-w-7xl">
    <div class="text-center mb-16">
        <h1 class="text-4xl font-bold text-primary mb-4">{i18n.work.title}</h1>
        <p class="text-xl text-primary/80 mb-6">{i18n.work.subtitle}</p>
        <p class="text-lg text-primary/70 max-w-3xl mx-auto">{i18n.work.description}</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 xl:gap-8 mb-16 max-w-6xl mx-auto">
        <!-- Consultation -->
        <div class="group bg-base-200 rounded-lg p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 ease-in-out">
            <div class="text-primary mb-4 transform transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
                <Icon name="tabler:message-circle" class="w-12 h-12" />
            </div>
            <h3 class="text-xl font-semibold mb-3 transition-colors duration-300 hover:text-primary">{i18n.work.services.consultation.title}</h3>
            <p class="text-primary/70">{i18n.work.services.consultation.description}</p>
        </div>

        <!-- Website Development -->
        <div class="group bg-base-200 rounded-lg p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 ease-in-out">
            <div class="text-primary mb-4 transform transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
                <Icon name="tabler:browser" class="w-12 h-12" />
            </div>
            <h3 class="text-xl font-semibold mb-3 transition-colors duration-300 hover:text-primary">{i18n.work.services.webDevelopment.title}</h3>
            <p class="text-primary/70">{i18n.work.services.webDevelopment.description}</p>
        </div>

        <!-- Website Maintenance -->
        <div class="group bg-base-200 rounded-lg p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 ease-in-out">
            <div class="text-primary mb-4 transform transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
                <Icon name="tabler:settings" class="w-12 h-12" />
            </div>
            <h3 class="text-xl font-semibold mb-3 transition-colors duration-300 hover:text-primary">{i18n.work.services.maintenance.title}</h3>
            <p class="text-primary/70">{i18n.work.services.maintenance.description}</p>
        </div>

        <!-- SEO Optimization -->
        <div class="group bg-base-200 rounded-lg p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 ease-in-out">
            <div class="text-primary mb-4 transform transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
                <Icon name="tabler:chart-arrows" class="w-12 h-12" />
            </div>
            <h3 class="text-xl font-semibold mb-3 transition-colors duration-300 hover:text-primary">{i18n.work.services.seo.title}</h3>
            <p class="text-primary/70">{i18n.work.services.seo.description}</p>
        </div>

        <!-- System Design -->
        <div class="group bg-base-200 rounded-lg p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 ease-in-out">
            <div class="text-primary mb-4 transform transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
                <Icon name="tabler:topology-star" class="w-12 h-12" />
            </div>
            <h3 class="text-xl font-semibold mb-3 transition-colors duration-300 hover:text-primary">{i18n.work.services.systemDesign.title}</h3>
            <p class="text-primary/70">{i18n.work.services.systemDesign.description}</p>
        </div>

        <!-- Platform Migration -->
        <div class="group bg-base-200 rounded-lg p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 ease-in-out">
            <div class="text-primary mb-4 transform transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
                <Icon name="tabler:server" class="w-12 h-12" />
            </div>
            <h3 class="text-xl font-semibold mb-3 transition-colors duration-300 hover:text-primary">{i18n.work.services.platformMigration.title}</h3>
            <p class="text-primary/70">{i18n.work.services.platformMigration.description}</p>
        </div>
    </div>

    <div class="text-center">
        <div class="space-x-4">
            <a href={`/${lang}/contact`} class="btn btn-primary">{i18n.work.cta.contact}</a>
            <a href={`/${lang}/contact?type=consultation`} class="btn btn-outline btn-primary">{i18n.work.cta.consultation}</a>
        </div>
    </div>
</section>
