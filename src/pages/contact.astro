---
import Layout from "../layouts/Layout.astro";
import ContactEmbed from "../components/ContactEmbed.astro";
import { en } from "../i18n/en";

// Define metadata for the page
const meta = {
  title: "Contact - Rio Bahtiar",
  description:
    "Get in touch with Rio Bahtiar for project inquiries, consultations, or collaboration opportunities.",
  image: "/images/og-image.jpg",
};
---

<Layout
  title={meta.title}
  description={meta.description}
  image={meta.image}
  showTopBanner={false}
>
  <ContactEmbed lang="en" i18n={en} />
</Layout>
