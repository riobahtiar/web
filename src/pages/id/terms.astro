---
import Layout from "../../layouts/Layout.astro";
import { id } from "../../i18n/id";

const lang = "id";
const { terms } = id;
const currentDate = new Date().toLocaleDateString("id-ID", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<Layout lang={lang} title={`${terms.title} - Rio Bahtiar`} description={terms.sections.acceptance.content}>
  <div class="relative overflow-hidden py-20">
    <!-- Background decorative elements -->
    <div class="absolute inset-0 z-0 opacity-10 dark:opacity-5">
      <div
        class="bg-primary/30 absolute -top-24 -right-24 h-96 w-96 rounded-full blur-3xl"
      >
      </div>
      <div
        class="bg-secondary/30 absolute -bottom-24 -left-24 h-96 w-96 rounded-full blur-3xl"
      >
      </div>
    </div>

    <div class="relative z-10 mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-12 text-center">
        <div class="mb-4 inline-block">
          <div class="relative">
            <span
              class="bg-primary/20 absolute inset-0 translate-x-1.5 translate-y-1.5 -rotate-3 transform rounded-lg"
            ></span>
            <span
              class="bg-primary text-primary-content relative inline-block rounded-lg px-4 py-2 font-medium"
            >
              {terms.subtitle}
            </span>
          </div>
        </div>
        <h1
          class="from-primary to-secondary mb-6 bg-gradient-to-r bg-clip-text text-4xl font-bold text-transparent md:text-5xl"
        >
          {terms.title}
        </h1>
        <p class="text-sm opacity-60">
          {terms.lastUpdated}: {currentDate}
        </p>
      </div>

      <!-- Content -->
      <div class="prose prose-lg max-w-none">
        <!-- Acceptance -->
        <section class="mb-12">
          <h2 class="text-primary">{terms.sections.acceptance.title}</h2>
          <p>{terms.sections.acceptance.content}</p>
        </section>

        <!-- Services -->
        <section class="mb-12">
          <h2 class="text-primary">{terms.sections.services.title}</h2>
          <p>{terms.sections.services.content}</p>
        </section>

        <!-- Intellectual Property -->
        <section class="mb-12">
          <h2 class="text-primary">{terms.sections.intellectualProperty.title}</h2>
          <p>{terms.sections.intellectualProperty.content}</p>
        </section>

        <!-- User Responsibilities -->
        <section class="mb-12">
          <h2 class="text-primary">{terms.sections.userResponsibilities.title}</h2>
          <ul>
            {terms.sections.userResponsibilities.points.map((point: string) => <li>{point}</li>)}
          </ul>
        </section>

        <!-- Project Terms -->
        <section class="mb-12">
          <h2 class="text-primary">{terms.sections.projectTerms.title}</h2>
          <p>{terms.sections.projectTerms.content}</p>
        </section>

        <!-- Payment -->
        <section class="mb-12">
          <h2 class="text-primary">{terms.sections.payment.title}</h2>
          <p>{terms.sections.payment.content}</p>
        </section>

        <!-- Confidentiality -->
        <section class="mb-12">
          <h2 class="text-primary">{terms.sections.confidentiality.title}</h2>
          <p>{terms.sections.confidentiality.content}</p>
        </section>

        <!-- Limitation -->
        <section class="mb-12">
          <h2 class="text-primary">{terms.sections.limitation.title}</h2>
          <p>{terms.sections.limitation.content}</p>
        </section>

        <!-- Termination -->
        <section class="mb-12">
          <h2 class="text-primary">{terms.sections.termination.title}</h2>
          <p>{terms.sections.termination.content}</p>
        </section>

        <!-- Changes -->
        <section class="mb-12">
          <h2 class="text-primary">{terms.sections.changes.title}</h2>
          <p>{terms.sections.changes.content}</p>
        </section>

        <!-- Governing Law -->
        <section class="mb-12">
          <h2 class="text-primary">{terms.sections.governingLaw.title}</h2>
          <p>{terms.sections.governingLaw.content}</p>
        </section>

        <!-- Contact -->
        <section class="mb-12">
          <h2 class="text-primary">{terms.sections.contact.title}</h2>
          <p>{terms.sections.contact.content}</p>
        </section>
      </div>
    </div>
  </div>
</Layout>
