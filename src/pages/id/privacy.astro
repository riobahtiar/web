---
import Layout from "../../layouts/Layout.astro";
import { id } from "../../i18n/id";

const lang = "id";
const { privacy } = id;
const currentDate = new Date().toLocaleDateString("id-ID", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<Layout lang={lang} title={`${privacy.title} - Rio Bahtiar`} description={privacy.sections.introduction.content}>
  <div class="relative overflow-hidden py-20">
    <!-- Background decorative elements -->
    <div class="absolute inset-0 z-0 opacity-10 dark:opacity-5">
      <div
        class="bg-primary/30 absolute -top-24 -right-24 h-96 w-96 rounded-full blur-3xl"
      >
      </div>
      <div
        class="bg-secondary/30 absolute -bottom-24 -left-24 h-96 w-96 rounded-full blur-3xl"
      >
      </div>
    </div>

    <div class="relative z-10 mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-12 text-center">
        <div class="mb-4 inline-block">
          <div class="relative">
            <span
              class="bg-primary/20 absolute inset-0 translate-x-1.5 translate-y-1.5 -rotate-3 transform rounded-lg"
            ></span>
            <span
              class="bg-primary text-primary-content relative inline-block rounded-lg px-4 py-2 font-medium"
            >
              {privacy.subtitle}
            </span>
          </div>
        </div>
        <h1
          class="from-primary to-secondary mb-6 bg-gradient-to-r bg-clip-text text-4xl font-bold text-transparent md:text-5xl"
        >
          {privacy.title}
        </h1>
        <p class="text-sm opacity-60">
          {privacy.lastUpdated}: {currentDate}
        </p>
      </div>

      <!-- Content -->
      <div class="prose prose-lg max-w-none">
        <!-- Introduction -->
        <section class="mb-12">
          <h2 class="text-primary">{privacy.sections.introduction.title}</h2>
          <p>{privacy.sections.introduction.content}</p>
        </section>

        <!-- Information Collection -->
        <section class="mb-12">
          <h2 class="text-primary">{privacy.sections.informationCollection.title}</h2>
          <p>{privacy.sections.informationCollection.content}</p>
        </section>

        <!-- How We Use -->
        <section class="mb-12">
          <h2 class="text-primary">{privacy.sections.howWeUse.title}</h2>
          <ul>
            {privacy.sections.howWeUse.points.map((point: string) => <li>{point}</li>)}
          </ul>
        </section>

        <!-- Data Protection -->
        <section class="mb-12">
          <h2 class="text-primary">{privacy.sections.dataProtection.title}</h2>
          <p>{privacy.sections.dataProtection.content}</p>
        </section>

        <!-- Cookies -->
        <section class="mb-12">
          <h2 class="text-primary">{privacy.sections.cookies.title}</h2>
          <p>{privacy.sections.cookies.content}</p>
        </section>

        <!-- Third Party -->
        <section class="mb-12">
          <h2 class="text-primary">{privacy.sections.thirdParty.title}</h2>
          <p>{privacy.sections.thirdParty.content}</p>
        </section>

        <!-- Your Rights -->
        <section class="mb-12">
          <h2 class="text-primary">{privacy.sections.yourRights.title}</h2>
          <ul>
            {privacy.sections.yourRights.points.map((point: string) => <li>{point}</li>)}
          </ul>
        </section>

        <!-- Contact -->
        <section class="mb-12">
          <h2 class="text-primary">{privacy.sections.contact.title}</h2>
          <p>{privacy.sections.contact.content}</p>
        </section>
      </div>
    </div>
  </div>
</Layout>
