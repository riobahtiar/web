---
import { getCollection } from "astro:content";
import BlogPost from "../../../../layouts/BlogPost.astro";
import { getReadingTimeI18n } from "../../../../utils/readingTime";
import { getRelatedPostsWithReadingTime } from "../../../../utils/relatedPosts";
import RelatedPosts from "../../../../components/blog/RelatedPosts.astro";

// Get params from URL (SSR mode)
const { category, slug } = Astro.params;

// Find the post dynamically
const posts = await getCollection("blog-id");
const post = posts.find((p) => {
  let cleanSlug = p.slug;
  if (cleanSlug.startsWith(p.data.category + "/")) {
    cleanSlug = cleanSlug.substring(p.data.category.length + 1);
  }
  return p.data.category === category && cleanSlug === slug;
});

if (!post) {
  return Astro.redirect("/id/404");
}

const { Content, headings } = await post.render();
const readingTime = getReadingTimeI18n(post.body, "id");

// Get related posts
const relatedPosts = await getRelatedPostsWithReadingTime(post, posts, 3, "id");
---

<BlogPost
  title={post.data.title}
  description={post.data.description}
  created_at={post.data.created_at}
  modified_at={post.data.modified_at}
  image={post.data.image}
  category={post.data.category}
  tags={post.data.tags}
  author={post.data.author}
  readingTime={readingTime}
  headings={headings}
  lang="id"
>
  <Content />

  <RelatedPosts posts={relatedPosts} lang="id" />
</BlogPost>
