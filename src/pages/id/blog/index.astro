---
import BlogIndex from '../../../layouts/BlogIndex.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog-id');

// Sort posts by date
const sortedPosts = posts.sort((a, b) => b.data.created_at.valueOf() - a.data.created_at.valueOf());

// Get categories and count
const categories = [...new Set(posts.map(post => post.data.category))].map(category => ({
    name: category,
    count: posts.filter(post => post.data.category === category).length
}));

const title = "Blog";
const description = "Jelajahi pemikiran, pengalaman, dan wawasan saya tentang pengembangan perangkat lunak, teknologi, dan lainnya.";
---

<BlogIndex
    title={title}
    description={description}
    lang="id"
    posts={sortedPosts}
    categories={categories}
    pagination={{
        currentPage: 1,
        totalPages: 1,
        url: {
            prev: undefined,
            next: undefined
        }
    }}
/> 